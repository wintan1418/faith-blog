<% content_for(:title) { "Feed - Faith Community" } %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex flex-col lg:flex-row gap-8">
    <!-- Main Feed -->
    <div class="flex-1">
      <!-- Feed Tabs -->
      <div class="flex items-center gap-2 mb-6 border-b border-stone-200 pb-4">
        <%= link_to feed_path, class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(feed_path) ? 'bg-amber-100 text-amber-800' : 'text-stone-600 hover:bg-stone-100'}" do %>
          <svg class="w-4 h-4 inline mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
          </svg>
          Recent
        <% end %>
        <%= link_to feed_trending_path, class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(feed_trending_path) ? 'bg-amber-100 text-amber-800' : 'text-stone-600 hover:bg-stone-100'}" do %>
          <svg class="w-4 h-4 inline mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
          </svg>
          Trending
        <% end %>
        <%= link_to feed_following_path, class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{current_page?(feed_following_path) ? 'bg-amber-100 text-amber-800' : 'text-stone-600 hover:bg-stone-100'}" do %>
          <svg class="w-4 h-4 inline mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          Following
        <% end %>
      </div>

      <!-- Posts -->
      <% if @posts.any? %>
        <div class="space-y-6">
          <% @posts.each do |post| %>
            <%= render "posts/card", post: post %>
          <% end %>
        </div>

        <div class="mt-8">
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      <% else %>
        <div class="card p-12 text-center">
          <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-stone-100 flex items-center justify-center">
            <svg class="w-8 h-8 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-stone-900 mb-2">No posts yet</h3>
          <p class="text-stone-600 mb-6">Be the first to share something with the community!</p>
          <%= link_to new_post_path, class: "btn-primary" do %>
            Create Your First Post
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <aside class="lg:w-80 space-y-6">
      <!-- Quick Actions -->
      <div class="card p-6">
        <h3 class="font-semibold text-stone-900 mb-4">Share with the Community</h3>
        <%= link_to new_post_path, class: "btn-primary w-full justify-center" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Create Post
        <% end %>
      </div>

      <!-- Rooms -->
      <div class="card p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-semibold text-stone-900">Rooms</h3>
          <%= link_to "View all", rooms_path, class: "text-sm text-amber-700 hover:text-amber-800" %>
        </div>
        <div class="space-y-3">
          <% Room.public_rooms.ordered.limit(5).each do |room| %>
            <%= link_to room_path(room), class: "flex items-center gap-3 p-2 rounded-lg hover:bg-stone-50 transition-colors" do %>
              <span class="text-lg"><%= room.icon %></span>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-stone-900 truncate"><%= room.name %></p>
                <p class="text-xs text-stone-500"><%= room.posts_count %> posts</p>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Scripture of the Day -->
      <div class="card p-6 bg-gradient-to-br from-amber-50 to-orange-50 border-amber-200">
        <h3 class="font-semibold text-amber-900 mb-3 flex items-center gap-2">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
          </svg>
          Daily Encouragement
        </h3>
        <p class="text-sm text-amber-800 italic">
          "For I know the plans I have for you," declares the LORD, "plans to prosper you and not to harm you, plans to give you hope and a future."
        </p>
        <p class="text-xs text-amber-700 mt-2 font-medium">â€” Jeremiah 29:11</p>
      </div>
    </aside>
  </div>
</div>

