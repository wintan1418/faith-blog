<% content_for(:title) { "Resend Confirmation - Faith Community" } %>

<div class="min-h-[calc(100vh-200px)] flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-stone-900">Resend Confirmation</h1>
      <p class="text-stone-600 mt-1">Enter your email to receive confirmation instructions</p>
    </div>

    <div class="card p-8">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, class: "space-y-5") do |f| %>
        <div>
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Enter your email" %>
        </div>

        <%= f.submit "Resend Confirmation", class: "btn-primary w-full btn-lg" %>
      <% end %>

      <div class="mt-6 text-center">
        <%= link_to "Back to sign in", new_session_path(resource_name), class: "text-amber-700 hover:text-amber-800 font-medium" %>
      </div>
    </div>
  </div>
</div>

