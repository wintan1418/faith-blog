<% content_for :title, "#{@user.display_name}'s Brethren Card" %>

<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to user_path(@user.username), class: "btn btn-ghost" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Profile
    <% end %>
  </div>

  <!-- Brethren Card -->
  <div class="brethren-card animate-scale-in">
    <!-- Header Pattern -->
    <div class="absolute top-0 left-0 right-0 h-24 bg-gradient-to-br from-amber-400/20 to-orange-400/10 rounded-t-xl -z-10"></div>
    
    <!-- Card Header -->
    <div class="text-center mb-6 relative z-10">
      <div class="inline-block p-1 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 mb-4">
        <% if @user.profile&.avatar&.attached? %>
          <%= image_tag @user.profile.avatar, class: "w-28 h-28 rounded-full object-cover border-4 border-white" %>
        <% else %>
          <div class="w-28 h-28 rounded-full bg-amber-100 border-4 border-white flex items-center justify-center">
            <span class="text-4xl font-bold text-amber-600"><%= @user.display_name[0].upcase %></span>
          </div>
        <% end %>
      </div>
      
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-1">
        <%= @user.display_name %>
      </h1>
      
      <% if @brethren_card&.occupation.present? %>
        <p class="text-amber-700 dark:text-amber-400 font-medium">
          <%= @brethren_card.occupation %>
        </p>
      <% end %>
    </div>

    <!-- Card Body -->
    <div class="space-y-4 relative z-10">
      <!-- Church/Assembly -->
      <% if @brethren_card&.church_or_assembly.present? %>
        <div class="flex items-start gap-3 p-3 bg-white/50 dark:bg-gray-800/50 rounded-xl">
          <div class="w-10 h-10 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-lg">‚õ™</span>
          </div>
          <div>
            <p class="text-xs font-semibold text-amber-600 dark:text-amber-400 uppercase tracking-wide">Church / Assembly</p>
            <p class="text-gray-800 dark:text-gray-200"><%= @brethren_card.church_or_assembly %></p>
          </div>
        </div>
      <% end %>

      <!-- Bio -->
      <% if @brethren_card&.bio.present? %>
        <div class="flex items-start gap-3 p-3 bg-white/50 dark:bg-gray-800/50 rounded-xl">
          <div class="w-10 h-10 rounded-lg bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-lg">üìù</span>
          </div>
          <div>
            <p class="text-xs font-semibold text-amber-600 dark:text-amber-400 uppercase tracking-wide">About Me</p>
            <p class="text-gray-800 dark:text-gray-200"><%= @brethren_card.bio %></p>
          </div>
        </div>
      <% end %>

      <!-- Contact Info -->
      <div class="border-t border-amber-200/50 dark:border-amber-700/30 pt-4 mt-4">
        <p class="text-xs font-semibold text-amber-600 dark:text-amber-400 uppercase tracking-wide mb-3 text-center">Contact Details</p>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <!-- WhatsApp -->
          <% if @brethren_card&.whatsapp_number.present? %>
            <%= link_to @brethren_card.whatsapp_link, target: "_blank", rel: "noopener", 
                class: "flex items-center gap-3 p-3 bg-green-50 dark:bg-green-900/20 hover:bg-green-100 dark:hover:bg-green-900/40 rounded-xl transition-all group" do %>
              <div class="w-10 h-10 rounded-lg bg-green-500 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-semibold text-green-700 dark:text-green-400">WhatsApp</p>
                <p class="text-gray-700 dark:text-gray-300 text-sm truncate"><%= @brethren_card.whatsapp_number %></p>
              </div>
              <svg class="w-4 h-4 text-green-600 dark:text-green-400 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            <% end %>
          <% end %>

          <!-- Email -->
          <% if @brethren_card&.email.present? %>
            <%= link_to @brethren_card.gmail_link, target: "_blank", rel: "noopener",
                class: "flex items-center gap-3 p-3 bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/40 rounded-xl transition-all group" do %>
              <div class="w-10 h-10 rounded-lg bg-red-500 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-semibold text-red-700 dark:text-red-400">Email</p>
                <p class="text-gray-700 dark:text-gray-300 text-sm truncate"><%= @brethren_card.email %></p>
              </div>
              <svg class="w-4 h-4 text-red-600 dark:text-red-400 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Card Footer -->
    <div class="mt-6 pt-4 border-t border-amber-200/50 dark:border-amber-700/30 text-center relative z-10">
      <p class="text-xs text-amber-600/70 dark:text-amber-400/70">
        ü§ù Connected on Faith Community
      </p>
    </div>
  </div>
</div>

