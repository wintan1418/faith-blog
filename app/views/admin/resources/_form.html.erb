<%= form_with model: [:admin, resource], class: "space-y-6" do |f| %>
  <% if resource.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <p class="text-red-800 font-medium mb-2">Please fix the following errors:</p>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "label" %>
    <%= f.text_field :title, class: "input", placeholder: "Resource title" %>
  </div>

  <div>
    <%= f.label :description, class: "label" %>
    <%= f.text_area :description, class: "input", rows: 4, placeholder: "Describe this resource..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :resource_category_id, "Category", class: "label" %>
      <%= f.collection_select :resource_category_id, ResourceCategory.all, :id, :name, { prompt: "Select a category" }, class: "input" %>
    </div>

    <div>
      <%= f.label :resource_type, "Type", class: "label" %>
      <%= f.select :resource_type, Resource.resource_types.keys.map { |t| [t.humanize, t] }, {}, class: "input" %>
    </div>
  </div>

  <div>
    <%= f.label :url, "URL / Link", class: "label" %>
    <%= f.url_field :url, class: "input", placeholder: "https://..." %>
    <p class="text-sm text-gray-500 mt-1">External link to the resource</p>
  </div>

  <div class="flex items-center gap-3">
    <%= f.check_box :featured, class: "w-5 h-5 text-amber-600 border-gray-300 rounded focus:ring-amber-500" %>
    <%= f.label :featured, "Feature this resource", class: "text-gray-700" %>
  </div>

  <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
    <%= f.submit resource.persisted? ? "Update Resource" : "Create Resource", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_resources_path, class: "btn btn-secondary" %>
  </div>
<% end %>

