<% content_for(:page_title) { "Manage Resources" } %>

<div class="flex items-center justify-between mb-6">
  <p class="text-gray-600">Manage community resources and materials</p>
  <%= link_to new_admin_resource_path, class: "btn btn-primary" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
    </svg>
    Add Resource
  <% end %>
</div>

<!-- Pending Approval Alert -->
<% pending = Resource.pending %>
<% if pending.any? %>
  <div class="bg-amber-50 border border-amber-200 rounded-xl p-4 mb-6">
    <div class="flex items-center gap-3">
      <svg class="w-5 h-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <div>
        <p class="font-semibold text-amber-800"><%= pending.count %> resource(s) pending approval</p>
        <p class="text-sm text-amber-700">Review and approve submitted resources below.</p>
      </div>
    </div>
  </div>
<% end %>

<div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
  <table class="w-full">
    <thead class="bg-gray-50 border-b border-gray-200">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Resource</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Category</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Submitted By</th>
        <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @resources.each do |resource| %>
        <tr class="hover:bg-gray-50 <%= 'bg-amber-50' unless resource.approved? %>">
          <td class="px-6 py-4">
            <div>
              <p class="font-semibold text-gray-900"><%= truncate(resource.title, length: 40) %></p>
              <p class="text-sm text-gray-500 truncate max-w-xs"><%= truncate(resource.description, length: 60) %></p>
            </div>
          </td>
          <td class="px-6 py-4">
            <span class="badge badge-secondary"><%= resource.resource_category&.name || "Uncategorized" %></span>
          </td>
          <td class="px-6 py-4 text-gray-600">
            <%= resource.resource_type.humanize %>
          </td>
          <td class="px-6 py-4">
            <% if resource.approved? %>
              <span class="badge badge-success">Approved</span>
            <% else %>
              <span class="badge badge-primary">Pending</span>
            <% end %>
            <% if resource.featured? %>
              <span class="badge badge-faith ml-1">Featured</span>
            <% end %>
          </td>
          <td class="px-6 py-4 text-gray-600">
            <%= resource.user.username %>
          </td>
          <td class="px-6 py-4 text-right">
            <div class="flex items-center justify-end gap-2">
              <% unless resource.approved? %>
                <%= button_to approve_admin_resource_path(resource), method: :post, class: "btn btn-success btn-sm" do %>
                  Approve
                <% end %>
                <%= button_to reject_admin_resource_path(resource), method: :post, class: "btn btn-ghost btn-sm text-red-600" do %>
                  Reject
                <% end %>
              <% else %>
                <%= link_to edit_admin_resource_path(resource), class: "btn btn-secondary btn-sm" do %>
                  Edit
                <% end %>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @resources.respond_to?(:total_pages) && @resources.total_pages > 1 %>
  <div class="mt-6">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>

