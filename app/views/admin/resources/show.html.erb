<% content_for(:page_title) { @resource.title } %>

<div class="mb-6 flex items-center justify-between">
  <%= link_to admin_resources_path, class: "btn btn-ghost btn-sm" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Resources
  <% end %>
  
  <%= link_to edit_admin_resource_path(@resource), class: "btn btn-primary" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
    </svg>
    Edit Resource
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Info -->
  <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-2"><%= @resource.title %></h2>
      <div class="flex items-center gap-2">
        <span class="badge badge-secondary"><%= @resource.resource_category&.name %></span>
        <span class="badge badge-secondary"><%= @resource.resource_type.humanize %></span>
        <% if @resource.featured? %>
          <span class="badge badge-faith">Featured</span>
        <% end %>
      </div>
    </div>

    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Description</h3>
        <p class="text-gray-700"><%= @resource.description %></p>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">URL</h3>
        <%= link_to @resource.url, @resource.url, target: "_blank", class: "text-amber-600 hover:underline break-all" %>
      </div>
    </div>
  </div>

  <!-- Stats -->
  <div class="space-y-4">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-sm font-semibold text-gray-500 uppercase mb-4">Details</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Status</span>
          <% if @resource.approved? %>
            <span class="badge badge-success">Approved</span>
          <% else %>
            <span class="badge badge-primary">Pending</span>
          <% end %>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Views</span>
          <span class="font-semibold text-gray-900"><%= @resource.views_count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Downloads</span>
          <span class="font-semibold text-gray-900"><%= @resource.downloads_count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Submitted By</span>
          <span class="font-semibold text-gray-900"><%= @resource.user.username %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Created</span>
          <span class="text-gray-900"><%= @resource.created_at.strftime("%b %d, %Y") %></span>
        </div>
      </div>
    </div>

    <% unless @resource.approved? %>
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <h3 class="text-sm font-semibold text-gray-500 uppercase mb-4">Moderation</h3>
        <div class="space-y-2">
          <%= button_to approve_admin_resource_path(@resource), method: :post, class: "btn btn-success w-full" do %>
            Approve Resource
          <% end %>
          <%= button_to reject_admin_resource_path(@resource), method: :post, class: "btn btn-danger w-full" do %>
            Reject Resource
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

