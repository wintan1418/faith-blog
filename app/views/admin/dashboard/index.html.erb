<% content_for(:page_title) { "Dashboard" } %>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-xl p-6 shadow-sm border border-stone-200">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-stone-500">Total Users</h3>
      <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
      </div>
    </div>
    <p class="text-3xl font-bold text-stone-900"><%= @total_users %></p>
    <p class="text-sm text-stone-500 mt-1">+<%= @new_users_today %> today</p>
  </div>

  <div class="bg-white rounded-xl p-6 shadow-sm border border-stone-200">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-stone-500">Total Posts</h3>
      <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center">
        <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
    </div>
    <p class="text-3xl font-bold text-stone-900"><%= @total_posts %></p>
    <p class="text-sm text-stone-500 mt-1">+<%= @posts_today %> today</p>
  </div>

  <div class="bg-white rounded-xl p-6 shadow-sm border border-stone-200">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-stone-500">Pending Reports</h3>
      <div class="w-10 h-10 rounded-lg bg-red-100 flex items-center justify-center">
        <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
    </div>
    <p class="text-3xl font-bold text-stone-900"><%= @pending_reports %></p>
    <% if @pending_reports > 0 %>
      <%= link_to "Review now →", admin_reports_path, class: "text-sm text-red-600 hover:text-red-700 mt-1 inline-block" %>
    <% else %>
      <p class="text-sm text-stone-500 mt-1">All clear!</p>
    <% end %>
  </div>

  <div class="bg-white rounded-xl p-6 shadow-sm border border-stone-200">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-medium text-stone-500">Pending Resources</h3>
      <div class="w-10 h-10 rounded-lg bg-amber-100 flex items-center justify-center">
        <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
      </div>
    </div>
    <p class="text-3xl font-bold text-stone-900"><%= @pending_resources %></p>
    <% if @pending_resources > 0 %>
      <%= link_to "Review now →", admin_resources_path, class: "text-sm text-amber-600 hover:text-amber-700 mt-1 inline-block" %>
    <% else %>
      <p class="text-sm text-stone-500 mt-1">All clear!</p>
    <% end %>
  </div>
</div>

<!-- Recent Activity -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Posts -->
  <div class="bg-white rounded-xl shadow-sm border border-stone-200">
    <div class="px-6 py-4 border-b border-stone-100 flex items-center justify-between">
      <h2 class="font-semibold text-stone-900">Recent Posts</h2>
      <%= link_to "View all", admin_posts_path, class: "text-sm text-amber-700 hover:text-amber-800" %>
    </div>
    <div class="divide-y divide-stone-100">
      <% @recent_posts.each do |post| %>
        <div class="px-6 py-4">
          <div class="flex items-start justify-between">
            <div class="flex-1 min-w-0">
              <p class="font-medium text-stone-900 truncate"><%= post.title %></p>
              <p class="text-sm text-stone-500">
                by <%= post.user.username %> in <%= post.room.name %>
              </p>
            </div>
            <span class="text-xs text-stone-400 ml-4"><%= time_ago_in_words(post.created_at) %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Recent Users -->
  <div class="bg-white rounded-xl shadow-sm border border-stone-200">
    <div class="px-6 py-4 border-b border-stone-100 flex items-center justify-between">
      <h2 class="font-semibold text-stone-900">New Users</h2>
      <%= link_to "View all", admin_users_path, class: "text-sm text-amber-700 hover:text-amber-800" %>
    </div>
    <div class="divide-y divide-stone-100">
      <% @recent_users.each do |user| %>
        <div class="px-6 py-4 flex items-center gap-4">
          <% if user.profile.avatar.attached? %>
            <%= image_tag user.profile.avatar_thumbnail, class: "w-10 h-10 avatar" %>
          <% else %>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-white text-sm font-medium">
              <%= user.username[0].upcase %>
            </div>
          <% end %>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-stone-900"><%= user.username %></p>
            <p class="text-sm text-stone-500"><%= user.email %></p>
          </div>
          <span class="text-xs text-stone-400"><%= time_ago_in_words(user.created_at) %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>

