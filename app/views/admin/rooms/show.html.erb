<% content_for(:page_title) { @room.name } %>

<div class="mb-6 flex items-center justify-between">
  <%= link_to admin_rooms_path, class: "btn btn-ghost btn-sm" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
    </svg>
    Back to Rooms
  <% end %>
  
  <%= link_to edit_admin_room_path(@room), class: "btn btn-primary" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
    </svg>
    Edit Room
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Main Info -->
  <div class="lg:col-span-2 bg-white rounded-xl shadow-sm border border-gray-200 p-6">
    <div class="flex items-center gap-4 mb-6">
      <div class="w-16 h-16 rounded-xl bg-gray-100 flex items-center justify-center text-3xl">
        <%= @room.icon %>
      </div>
      <div>
        <h2 class="text-2xl font-bold text-gray-900"><%= @room.name %></h2>
        <span class="badge badge-secondary"><%= @room.room_type.humanize %></span>
      </div>
    </div>

    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Description</h3>
        <p class="text-gray-700"><%= @room.description %></p>
      </div>

      <% if @room.rules.present? %>
        <div>
          <h3 class="text-sm font-semibold text-gray-500 uppercase mb-1">Rules</h3>
          <p class="text-gray-700"><%= @room.rules %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="space-y-4">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-sm font-semibold text-gray-500 uppercase mb-4">Statistics</h3>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Members</span>
          <span class="font-semibold text-gray-900"><%= @room.room_memberships.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Posts</span>
          <span class="font-semibold text-gray-900"><%= @room.posts.count %></span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Status</span>
          <% if @room.is_public? %>
            <span class="badge badge-success">Public</span>
          <% else %>
            <span class="badge badge-secondary">Private</span>
          <% end %>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-gray-600">Position</span>
          <span class="font-semibold text-gray-900">#<%= @room.position %></span>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
      <h3 class="text-sm font-semibold text-gray-500 uppercase mb-4">Quick Actions</h3>
      <div class="space-y-2">
        <%= link_to room_path(@room), class: "btn btn-secondary w-full", target: "_blank" do %>
          View on Site
        <% end %>
      </div>
    </div>
  </div>
</div>

