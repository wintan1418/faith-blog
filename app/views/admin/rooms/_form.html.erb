<%= form_with model: [:admin, room], class: "space-y-6" do |f| %>
  <% if room.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <p class="text-red-800 font-medium mb-2">Please fix the following errors:</p>
      <ul class="list-disc list-inside text-sm text-red-700">
        <% room.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input", placeholder: "Room name" %>
    </div>

    <div>
      <%= f.label :icon, "Icon (Emoji)", class: "label" %>
      <%= f.text_field :icon, class: "input", placeholder: "ðŸ™" %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "label" %>
    <%= f.text_area :description, class: "input", rows: 3, placeholder: "Describe what this room is for..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :room_type, class: "label" %>
      <%= f.select :room_type, Room.room_types.keys.map { |t| [t.humanize, t] }, {}, class: "input" %>
    </div>

    <div>
      <%= f.label :color, "Theme Color", class: "label" %>
      <%= f.color_field :color, class: "w-full h-12 rounded-lg border border-gray-200 cursor-pointer" %>
    </div>
  </div>

  <div>
    <%= f.label :rules, "Room Rules", class: "label" %>
    <%= f.text_area :rules, class: "input", rows: 4, placeholder: "Guidelines for posting in this room..." %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :position, "Sort Position", class: "label" %>
      <%= f.number_field :position, class: "input", min: 1 %>
    </div>

    <div class="flex items-center gap-3 pt-6">
      <%= f.check_box :is_public, class: "w-5 h-5 text-amber-600 border-gray-300 rounded focus:ring-amber-500" %>
      <%= f.label :is_public, "Public Room (visible to all users)", class: "text-gray-700" %>
    </div>
  </div>

  <div class="flex items-center gap-3 pt-4 border-t border-gray-200">
    <%= f.submit room.persisted? ? "Update Room" : "Create Room", class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_rooms_path, class: "btn btn-secondary" %>
  </div>
<% end %>

