<% content_for :title, "My Connections" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">My Connections</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Brothers and sisters you've connected with
      </p>
    </div>
    <%= link_to connection_requests_path, class: "btn btn-secondary" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8m-5 5h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293h3.172a1 1 0 00.707-.293l2.414-2.414a1 1 0 01.707-.293H20"/>
      </svg>
      Pending Requests
    <% end %>
  </div>

  <% if @connections.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @connections.each do |user| %>
        <div class="brethren-card">
          <div class="flex items-start gap-4">
            <!-- Avatar -->
            <div class="flex-shrink-0">
              <div class="p-0.5 rounded-full bg-gradient-to-br from-amber-400 to-orange-500">
                <% if user.profile&.avatar&.attached? %>
                  <%= image_tag user.profile.avatar, class: "w-16 h-16 rounded-full object-cover border-2 border-white" %>
                <% else %>
                  <div class="w-16 h-16 rounded-full bg-amber-100 border-2 border-white flex items-center justify-center">
                    <span class="text-2xl font-bold text-amber-600"><%= user.display_name[0].upcase %></span>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- Info -->
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-gray-900 dark:text-white text-lg">
                <%= user.display_name %>
              </h3>
              
              <% if user.brethren_card&.occupation.present? %>
                <p class="text-amber-700 dark:text-amber-400 text-sm font-medium">
                  <%= user.brethren_card.occupation %>
                </p>
              <% end %>
              
              <% if user.brethren_card&.church_or_assembly.present? %>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1 flex items-center gap-1">
                  <span>â›ª</span>
                  <span class="truncate"><%= user.brethren_card.church_or_assembly %></span>
                </p>
              <% end %>
            </div>
          </div>
          
          <!-- Actions -->
          <div class="mt-4 pt-4 border-t border-amber-200/50 dark:border-amber-700/30 flex flex-wrap gap-2">
            <%= link_to brethren_card_path(user.username), class: "btn btn-primary btn-sm flex-1" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2"/>
              </svg>
              View Card
            <% end %>
            
            <% if user.brethren_card&.whatsapp_link %>
              <%= link_to user.brethren_card.whatsapp_link, target: "_blank", rel: "noopener", class: "btn btn-sm bg-green-500 hover:bg-green-600 text-white" do %>
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              <% end %>
            <% end %>
            
            <% if user.brethren_card&.gmail_link %>
              <%= link_to user.brethren_card.gmail_link, target: "_blank", rel: "noopener", class: "btn btn-sm bg-red-500 hover:bg-red-600 text-white" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card p-12 text-center">
      <span class="text-6xl mb-4 block">ðŸŒ±</span>
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">No connections yet</h3>
      <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md mx-auto">
        Start building your community by sending "Can I Know You More?" requests to fellow believers you'd like to connect with.
      </p>
      <%= link_to "Explore the Feed", feed_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

