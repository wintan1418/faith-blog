<% content_for(:title) { "#{@post.title} - Faith Community" } %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <article class="card">
    <!-- Post Header -->
    <div class="p-6 sm:p-8 border-b border-stone-100">
      <div class="flex items-start gap-4 mb-6">
        <% unless @post.anonymous? %>
          <%= link_to user_path(@post.user.username), class: "flex-shrink-0" do %>
            <% if @post.user.profile&.avatar&.attached? %>
              <%= image_tag @post.user.profile.avatar, class: "w-12 h-12 avatar rounded-full object-cover" %>
            <% else %>
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-white text-lg font-medium">
                <%= @post.user.username[0].upcase %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="w-12 h-12 rounded-full bg-stone-200 flex items-center justify-center">
            <svg class="w-6 h-6 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
        <% end %>
        
        <div class="flex-1">
          <div class="flex items-center gap-2 mb-1">
            <% unless @post.anonymous? %>
              <%= link_to @post.user.username, user_path(@post.user.username), class: "font-semibold text-stone-900 hover:text-amber-700" %>
              <% if user_signed_in? && @post.user != current_user %>
                <% if current_user.following?(@post.user) %>
                  <%= button_to unfollow_user_path(@post.user.username), method: :delete, class: "text-xs text-stone-500 hover:text-stone-700" do %>
                    Following
                  <% end %>
                <% else %>
                  <%= button_to follow_user_path(@post.user.username), class: "text-xs text-amber-700 hover:text-amber-800 font-medium" do %>
                    Follow
                  <% end %>
                <% end %>
              <% end %>
            <% else %>
              <span class="font-semibold text-stone-500">Anonymous</span>
            <% end %>
          </div>
          <div class="flex flex-wrap items-center gap-2 text-sm text-stone-500">
            <%= link_to room_path(@post.room), class: "inline-flex items-center gap-1 hover:text-amber-700" do %>
              <span><%= @post.room.icon %></span>
              <span><%= @post.room.name %></span>
            <% end %>
            <span class="text-stone-300">¬∑</span>
            <time datetime="<%= @post.published_at&.iso8601 %>">
              <%= @post.published_at&.strftime("%B %d, %Y") %>
            </time>
            <span class="text-stone-300">¬∑</span>
            <span><%= @post.reading_time %> min read</span>
          </div>
        </div>

        <% if @post.featured? %>
          <span class="badge-primary">
            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Featured
          </span>
        <% end %>
      </div>

      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-6 leading-tight"><%= @post.title %></h1>

      <% if @post.tags.any? %>
        <div class="flex flex-wrap gap-2">
          <% @post.tags.each do |tag| %>
            <%= link_to search_path(q: tag.name, type: "posts"), class: "tag-badge hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" do %>
              #<%= tag.name %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Post Images - Medium Style -->
    <% if @post.has_images? %>
      <div class="px-6 sm:px-8 pb-8">
        <% if @post.images.count == 1 %>
          <!-- Single large image -->
          <figure class="w-full">
            <%= image_tag @post.images.first, 
                class: "w-full rounded-lg object-cover", 
                alt: @post.title %>
          </figure>
        <% elsif @post.images.count == 2 %>
          <!-- Two side by side -->
          <div class="grid grid-cols-2 gap-4">
            <% @post.images.each do |image| %>
              <figure>
                <%= image_tag image, 
                    class: "w-full h-64 object-cover rounded-lg" %>
              </figure>
            <% end %>
          </div>
        <% elsif @post.images.count == 3 %>
          <!-- One large, two small -->
          <div class="grid grid-cols-2 gap-4">
            <figure class="row-span-2">
              <%= image_tag @post.images.first, 
                  class: "w-full h-full object-cover rounded-lg" %>
            </figure>
            <% @post.images[1..2].each do |image| %>
              <figure>
                <%= image_tag image, 
                    class: "w-full h-64 object-cover rounded-lg" %>
              </figure>
            <% end %>
          </div>
        <% else %>
          <!-- Grid layout for 4-5 images -->
          <div class="grid grid-cols-2 gap-4">
            <% @post.images.each_with_index do |image, index| %>
              <% if index == 0 && @post.images.count == 5 %>
                <!-- First image spans 2 columns if 5 images -->
                <figure class="col-span-2">
                  <%= image_tag image, 
                      class: "w-full h-80 object-cover rounded-lg" %>
                </figure>
              <% else %>
                <figure>
                  <%= image_tag image, 
                      class: "w-full h-64 object-cover rounded-lg" %>
                </figure>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Post Content - Medium Style -->
    <div class="px-6 sm:px-8 pb-8">
      <div class="prose-faith max-w-3xl mx-auto">
        <%= @post.content %>
      </div>
    </div>

    <!-- Linked Posts -->
    <% if @post.linked_posts.any? || @post.linking_posts.any? %>
      <div class="px-6 sm:px-8 pb-6">
        <% if @post.linked_posts.any? %>
          <div class="mb-4">
            <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase mb-3">üîó Related Posts</h3>
            <div class="space-y-2">
              <% @post.linked_posts.each do |linked| %>
                <%= link_to post_path(linked), class: "block p-3 bg-amber-50 dark:bg-amber-900/20 hover:bg-amber-100 dark:hover:bg-amber-900/40 rounded-lg transition-colors" do %>
                  <p class="font-medium text-gray-900 dark:text-white"><%= linked.title %></p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">by <%= linked.user.username %></p>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @post.linking_posts.any? %>
          <div>
            <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase mb-3">üì• Posts that link here</h3>
            <div class="space-y-2">
              <% @post.linking_posts.each do |linking| %>
                <%= link_to post_path(linking), class: "block p-3 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" do %>
                  <p class="font-medium text-gray-900 dark:text-white"><%= linking.title %></p>
                  <p class="text-sm text-gray-600 dark:text-gray-400">by <%= linking.user.username %></p>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Post Actions -->
    <div class="px-6 sm:px-8 py-4 bg-stone-50 border-t border-stone-100">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <!-- Reactions with Dropdown -->
          <% if user_signed_in? %>
            <div class="relative" data-controller="reactions" id="<%= dom_id(@post, :reactions) %>">
              <% user_like = current_user.likes.find_by(likeable: @post) %>
              <% if user_like %>
                <%= button_to unlike_path(likeable_type: "Post", likeable_id: @post.id), 
                    method: :delete,
                    class: "flex items-center gap-2 px-4 py-2 rounded-lg bg-amber-50 dark:bg-amber-900/20 text-amber-600 dark:text-amber-400 hover:bg-amber-100 dark:hover:bg-amber-900/30 transition-colors",
                    data: { turbo_frame: "_top" },
                    title: "Remove reaction" do %>
                  <span class="text-lg"><%= Like.reaction_emoji(user_like.reaction_type) %></span>
                  <span class="text-sm font-medium"><%= @post.likes_count %></span>
                <% end %>
              <% else %>
                <button type="button" 
                        class="flex items-center gap-2 px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 hover:bg-amber-50 dark:hover:bg-amber-900/20 hover:text-amber-600 dark:hover:text-amber-400 transition-colors"
                        data-action="click->reactions#showDropdown"
                        title="Add reaction">
                  <span class="text-lg">üôè</span>
                  <span class="text-sm font-medium"><%= @post.likes_count > 0 ? @post.likes_count : "React" %></span>
                </button>
                
                <!-- Reaction Dropdown -->
                <div class="absolute bottom-full left-0 mb-2 p-2 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 hidden z-50"
                     data-reactions-target="dropdown">
                  <div class="flex gap-1">
                    <% Like.reaction_types.keys.each do |reaction| %>
                      <%= button_to likes_path(likeable_type: "Post", likeable_id: @post.id, reaction_type: reaction),
                          class: "p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors text-xl",
                          title: Like.reaction_label(reaction),
                          data: { turbo_frame: "_top" } do %>
                        <%= Like.reaction_emoji(reaction) %>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <span class="flex items-center gap-2 text-gray-500 dark:text-gray-400 text-sm">
              <span class="text-lg">üôè</span>
              <span class="font-medium"><%= @post.likes_count %></span>
            </span>
          <% end %>
          
          <!-- Reshare -->
          <div id="<%= dom_id(@post, :reshare) %>">
            <%= render "reshares/button", post: @post %>
          </div>
          
          <% if @post.reshares_count > 0 %>
            <span class="text-sm text-gray-500 dark:text-gray-400" title="<%= @post.reshares_count %> reshares">
              <%= @post.reshares_count %> reshares
            </span>
          <% end %>
        </div>

        <div class="flex items-center gap-2">
          <!-- Bookmark -->
          <% if user_signed_in? %>
            <% if current_user.has_bookmarked?(@post) %>
              <%= button_to post_bookmark_path(@post), method: :delete, class: "btn btn-ghost", data: { turbo_frame: "_top" } do %>
                <svg class="w-5 h-5 mr-1 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"/>
                </svg>
                Saved
              <% end %>
            <% else %>
              <%= button_to post_bookmark_path(@post), class: "btn btn-ghost", data: { turbo_frame: "_top" } do %>
                <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                </svg>
                Save
              <% end %>
            <% end %>
          <% end %>

          <!-- Edit/Delete for owner -->
          <% if user_signed_in? && (@post.user == current_user || current_user.admin?) %>
            <%= link_to edit_post_path(@post), class: "btn btn-ghost" do %>
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
              Edit
            <% end %>
          <% end %>

          <!-- Feature for admins/mods -->
          <% if user_signed_in? && current_user.admin_or_moderator? %>
            <% if @post.featured? %>
              <%= button_to unfeature_post_path(@post), class: "btn btn-ghost text-amber-700" do %>
                Unfeature
              <% end %>
            <% else %>
              <%= button_to feature_post_path(@post), class: "btn btn-ghost" do %>
                Feature
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </article>

  <!-- Comments Section -->
  <section id="comments" class="mt-8">
    <div class="card">
      <div class="p-6 border-b border-stone-100">
        <h2 class="text-xl font-semibold text-stone-900">
          Comments (<%= @post.comments_count %>)
        </h2>
      </div>

      <% if @post.allow_comments? %>
        <% if user_signed_in? %>
          <div class="p-6 border-b border-stone-100 bg-stone-50">
            <%= render "comments/form", post: @post, comment: @new_comment %>
          </div>
        <% else %>
          <div class="p-6 border-b border-stone-100 bg-stone-50 text-center">
            <p class="text-stone-600">
              <%= link_to "Sign in", new_user_session_path, class: "link" %> to join the conversation.
            </p>
          </div>
        <% end %>

        <div class="divide-y divide-stone-100">
          <% if @comments.any? %>
            <% @comments.each do |comment| %>
              <%= render "comments/comment", comment: comment, post: @post %>
            <% end %>
          <% else %>
            <div class="p-8 text-center">
              <p class="text-stone-500">No comments yet. Be the first to share your thoughts!</p>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="p-8 text-center">
          <p class="text-stone-500">Comments are disabled for this post.</p>
        </div>
      <% end %>
    </div>
  </section>
</div>

