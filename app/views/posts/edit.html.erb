<% content_for(:title) { "Edit Post - Faith Community" } %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="card">
    <div class="p-6 border-b border-stone-100">
      <h1 class="text-2xl font-bold text-stone-900">Edit Post</h1>
      <p class="text-stone-600 mt-1">Make changes to your post.</p>
    </div>

    <div class="p-6">
      <%= render "form", post: @post, rooms: @rooms %>
    </div>
  </div>

  <div class="mt-6 flex justify-end">
    <%= button_to "Delete Post", post_path(@post), method: :delete, class: "btn-danger", data: { turbo_confirm: "Are you sure you want to delete this post? This action cannot be undone." } %>
  </div>
</div>

