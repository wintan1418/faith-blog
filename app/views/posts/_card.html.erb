<article class="post-card" id="<%= dom_id(post) %>">
  <div class="p-6">
    <!-- Header -->
    <div class="flex items-start gap-4 mb-4">
      <% unless post.anonymous? %>
        <%= link_to user_path(post.user.username), class: "flex-shrink-0" do %>
          <% if post.user.profile.avatar.attached? %>
            <%= image_tag post.user.profile.avatar_thumbnail, class: "w-10 h-10 avatar" %>
          <% else %>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-white font-medium">
              <%= post.user.username[0].upcase %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="w-10 h-10 rounded-full bg-stone-200 flex items-center justify-center">
          <svg class="w-5 h-5 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
      <% end %>
      
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1">
          <% unless post.anonymous? %>
            <%= link_to post.user.username, user_path(post.user.username), class: "font-medium text-stone-900 hover:text-amber-700" %>
          <% else %>
            <span class="font-medium text-stone-500">Anonymous</span>
          <% end %>
          <span class="text-stone-300">¬∑</span>
          <time class="text-sm text-stone-500" datetime="<%= post.published_at&.iso8601 %>">
            <%= time_ago_in_words(post.published_at || post.created_at) %> ago
          </time>
        </div>
        <%= link_to room_path(post.room), class: "inline-flex items-center gap-1 text-xs text-stone-500 hover:text-amber-700" do %>
          <span><%= post.room.icon %></span>
          <span><%= post.room.name %></span>
        <% end %>
      </div>

      <% if post.featured? %>
        <span class="badge-primary">
          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          Featured
        </span>
      <% end %>
    </div>

    <!-- Content -->
    <div class="mb-4">
      <%= link_to post_path(post) do %>
        <h2 class="text-xl font-semibold text-stone-900 mb-2 hover:text-amber-700 transition-colors">
          <%= post.title %>
        </h2>
      <% end %>
      <div class="text-stone-600 line-clamp-3 prose-faith prose-sm">
        <%= truncate(post.content.to_plain_text, length: 250) %>
      </div>
    </div>

    <!-- Tags -->
    <% if post.tags.any? %>
      <div class="flex flex-wrap gap-2 mb-4">
        <% post.tags.limit(5).each do |tag| %>
          <span class="badge-secondary">#<%= tag.name %></span>
        <% end %>
      </div>
    <% end %>

    <!-- Footer -->
    <div class="flex items-center justify-between pt-4 border-t border-stone-100">
      <div class="flex items-center gap-4">
        <!-- Like button -->
        <% if user_signed_in? %>
          <% if current_user.has_liked?(post) %>
            <%= button_to unlike_path(likeable_type: "Post", likeable_id: post.id), method: :delete, class: "reaction-btn-active", data: { turbo_frame: "_top" } do %>
              üôè <%= post.likes_count %>
            <% end %>
          <% else %>
            <%= button_to likes_path(likeable_type: "Post", likeable_id: post.id), class: "reaction-btn-inactive", data: { turbo_frame: "_top" } do %>
              üôè <%= post.likes_count > 0 ? post.likes_count : "Amen" %>
            <% end %>
          <% end %>
        <% else %>
          <span class="reaction-btn-inactive">üôè <%= post.likes_count %></span>
        <% end %>

        <!-- Comments -->
        <%= link_to post_path(post, anchor: "comments"), class: "reaction-btn-inactive" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <%= post.comments_count %>
        <% end %>
      </div>

      <div class="flex items-center gap-2">
        <!-- Bookmark -->
        <% if user_signed_in? %>
          <% if current_user.has_bookmarked?(post) %>
            <%= button_to post_bookmark_path(post), method: :delete, class: "p-2 rounded-lg text-amber-600 hover:bg-amber-50 transition-colors", data: { turbo_frame: "_top" } do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"/>
              </svg>
            <% end %>
          <% else %>
            <%= button_to post_bookmark_path(post), class: "p-2 rounded-lg text-stone-400 hover:text-amber-600 hover:bg-amber-50 transition-colors", data: { turbo_frame: "_top" } do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
              </svg>
            <% end %>
          <% end %>
        <% end %>

        <!-- Read more -->
        <%= link_to post_path(post), class: "text-sm font-medium text-amber-700 hover:text-amber-800" do %>
          Read more ‚Üí
        <% end %>
      </div>
    </div>
  </div>
</article>

