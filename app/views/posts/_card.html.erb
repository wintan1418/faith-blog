<article class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-gray-300 dark:hover:border-gray-600 transition-all duration-200 mb-8 shadow-sm hover:shadow-md" id="<%= dom_id(post) %>">
  <div class="p-6 sm:p-8">
    <div class="flex flex-col sm:flex-row gap-6">
      <!-- Content Section -->
      <div class="flex-1 min-w-0">
        <!-- Author Info -->
        <div class="flex items-center gap-2.5 mb-4">
          <% unless post.anonymous? %>
            <%= link_to user_path(post.user.username), class: "flex-shrink-0 hover:opacity-80 transition-opacity" do %>
              <% if post.user.profile&.avatar&.attached? %>
                <%= image_tag post.user.profile.avatar, class: "w-8 h-8 rounded-full object-cover ring-2 ring-gray-100 dark:ring-gray-700" %>
              <% else %>
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-white text-sm font-medium ring-2 ring-gray-100 dark:ring-gray-700">
                  <%= post.user.username[0].upcase %>
                </div>
              <% end %>
            <% end %>
            <div class="flex items-center gap-2">
              <%= link_to post.user.username, user_path(post.user.username), class: "text-sm font-semibold text-gray-900 dark:text-white hover:text-amber-600 dark:hover:text-amber-400 transition-colors" %>
              <span class="text-gray-300 dark:text-gray-600">¬∑</span>
              <%= link_to post.room.name, room_path(post.room), class: "text-sm text-gray-500 dark:text-gray-400 hover:text-amber-600 dark:hover:text-amber-400 transition-colors" %>
            </div>
          <% else %>
            <div class="w-8 h-8 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center ring-2 ring-gray-100 dark:ring-gray-700">
              <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="flex items-center gap-2">
              <span class="text-sm font-semibold text-gray-500 dark:text-gray-400">Anonymous</span>
              <span class="text-gray-300 dark:text-gray-600">¬∑</span>
              <%= link_to post.room.name, room_path(post.room), class: "text-sm text-gray-500 dark:text-gray-400 hover:text-amber-600 dark:hover:text-amber-400 transition-colors" %>
            </div>
          <% end %>
        </div>

        <!-- Title -->
        <%= link_to post_path(post), class: "block group mb-3" do %>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-3 leading-tight group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors line-clamp-2">
            <%= post.title %>
          </h2>
        <% end %>

        <!-- Excerpt -->
        <p class="text-gray-600 dark:text-gray-400 mb-5 line-clamp-3 leading-relaxed text-base">
          <%= truncate(post.content.to_plain_text, length: 160) %>
        </p>

        <!-- Tags -->
        <% if post.tags.any? %>
          <div class="flex flex-wrap gap-2 mb-5">
            <% post.tags.limit(3).each do |tag| %>
              <%= link_to search_path(q: tag.name), class: "px-3 py-1 text-xs font-medium text-gray-600 dark:text-gray-300 bg-gray-100 dark:bg-gray-700/50 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors" do %>
                <%= tag.name %>
              <% end %>
            <% end %>
          </div>
        <% end %>

        <!-- Meta Info & Actions -->
        <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700/50">
          <div class="flex items-center flex-wrap gap-x-4 gap-y-2 text-sm text-gray-500 dark:text-gray-400">
            <time datetime="<%= post.published_at&.iso8601 %>" class="flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <%= post.published_at&.strftime("%b %d") || post.created_at.strftime("%b %d") %>
            </time>
            <span class="text-gray-300 dark:text-gray-600">¬∑</span>
            <span class="flex items-center gap-1.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <%= post.reading_time %> min read
            </span>
            <% if post.featured? %>
              <span class="inline-flex items-center gap-1.5 text-amber-600 dark:text-amber-400">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                Featured
              </span>
            <% end %>
          </div>

          <div class="flex items-center gap-4">
            <!-- Reactions Button with Dropdown -->
            <% if user_signed_in? %>
              <div class="relative" data-controller="reactions" id="<%= dom_id(post, :reactions) %>">
                <% user_like = current_user.likes.find_by(likeable: post) %>
                <% if user_like %>
                  <%= button_to unlike_path(likeable_type: "Post", likeable_id: post.id), 
                      method: :delete,
                      class: "flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-amber-50 dark:bg-amber-900/20 text-amber-600 dark:text-amber-400 hover:bg-amber-100 dark:hover:bg-amber-900/30 transition-colors",
                      data: { turbo_frame: "_top" },
                      title: "Remove reaction" do %>
                    <span class="text-base"><%= Like.reaction_emoji(user_like.reaction_type) %></span>
                    <span class="text-sm font-medium"><%= post.likes_count %></span>
                  <% end %>
                <% else %>
                  <button type="button" 
                          class="flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 hover:bg-amber-50 dark:hover:bg-amber-900/20 hover:text-amber-600 dark:hover:text-amber-400 transition-colors"
                          data-action="click->reactions#showDropdown"
                          title="Add reaction">
                    <span class="text-base">üôè</span>
                    <span class="text-sm font-medium"><%= post.likes_count > 0 ? post.likes_count : "React" %></span>
                  </button>
                  
                  <!-- Reaction Dropdown -->
                  <div class="absolute bottom-full left-0 mb-2 p-2 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 hidden z-50"
                       data-reactions-target="dropdown">
                    <div class="flex gap-1">
                      <% Like.reaction_types.keys.each do |reaction| %>
                        <%= button_to likes_path(likeable_type: "Post", likeable_id: post.id, reaction_type: reaction),
                            class: "p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors text-xl",
                            title: Like.reaction_label(reaction),
                            data: { turbo_frame: "_top" } do %>
                          <%= Like.reaction_emoji(reaction) %>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <span class="flex items-center gap-1.5 text-gray-500 dark:text-gray-400 text-sm">
                <span class="text-base">üôè</span>
                <span class="font-medium"><%= post.likes_count %></span>
              </span>
            <% end %>
            
            <!-- Comments Count -->
            <span class="flex items-center gap-1.5 text-gray-500 dark:text-gray-400 text-sm" title="<%= post.comments_count %> comments">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <span class="font-medium"><%= post.comments_count %></span>
            </span>
            
            <!-- Reshare -->
            <div id="<%= dom_id(post, :reshare) %>">
              <%= render "reshares/button", post: post %>
            </div>
            
            <% if post.reshares_count > 0 %>
              <span class="text-sm text-gray-500 dark:text-gray-400" title="<%= post.reshares_count %> reshares">
                <%= post.reshares_count %>
              </span>
            <% end %>

            <!-- Bookmark -->
            <% if user_signed_in? %>
              <% if current_user.has_bookmarked?(post) %>
                <%= button_to post_bookmark_path(post), method: :delete, class: "p-2 text-amber-500 hover:bg-amber-50 dark:hover:bg-amber-900/20 rounded-lg transition-colors", data: { turbo_frame: "_top" }, title: "Remove bookmark" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"/>
                  </svg>
                <% end %>
              <% else %>
                <%= button_to post_bookmark_path(post), class: "p-2 text-gray-400 hover:text-amber-500 hover:bg-amber-50 dark:hover:bg-amber-900/20 rounded-lg transition-colors", data: { turbo_frame: "_top" }, title: "Save to bookmarks" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/>
                  </svg>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Cover Image (first image) -->
      <% if post.has_images? %>
        <%= link_to post_path(post), class: "flex-shrink-0 sm:order-last group" do %>
          <div class="relative overflow-hidden rounded-lg">
            <%= image_tag post.images.first, 
                class: "w-full sm:w-[200px] h-[140px] sm:h-[180px] object-cover group-hover:scale-105 transition-transform duration-300",
                alt: post.title %>
            <% if post.images.count > 1 %>
              <span class="absolute bottom-3 right-3 px-2.5 py-1 bg-black/70 backdrop-blur-sm text-white text-xs font-medium rounded-lg">
                +<%= post.images.count - 1 %>
              </span>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</article>
